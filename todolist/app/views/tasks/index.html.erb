<h1>Listing tasks</h1>

<table class="table"> 
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Done</th>
      <th>Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |t| %>
      <tr class="<%= t.color %>">
        <td><%= t.picture %></td>
        <td><%= t.name %></td>
        <td><%= t.date %></td>
        <td><%= t.done %></td>
        <td><%= t.deadline %></td>
        <td><%= link_to 'Show', t, class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_task_path(t), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', t, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
